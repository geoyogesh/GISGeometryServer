<!doctype html>
<html>
<head>
    <title>Offset (Geometry)</title>
</head>
<body>
    <form action="" method="get">
    <table>
        <tbody>
            <tr>
                <td>
                    Spatial Reference:
                </td>
                <td>
                    <input type="text" value="" name="sr"/>
                </td>
            </tr>
            <tr valign="top">
                <td>
                    Target:
                </td>
                <td>
                    <textarea cols="50" rows="10" name="target"></textarea>
                </td>
            </tr>
            <tr valign="top">
                <td>
                    Cutter:
                </td>
                <td>
                    <textarea cols="50" rows="10" name="cutter"></textarea>
                </td>
            </tr>
            <tr>
                <td>
                    Format:
                </td>
                <td>
                    <select name="f">
                        <option>HTML</option>
                        <option value="pjson">JSON</option>
                    </select>
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    <input type="submit" value="Cut"/>
                </td>
            </tr>
        </tbody>
    </table>
    </form>
</body>
</html>
